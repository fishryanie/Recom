<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/dark_blue"
                android:endColor="@color/green_blue"
                android:gradientRadius="15dp">
            </gradient>
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" >
            </padding>
            <corners
                android:radius="3dp" >
            </corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/dark_blue"
                android:endColor="@color/green_blue"
                android:gradientRadius="15dp">
            </gradient>
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" >
            </padding>
            <corners
                android:radius="3dp" >
            </corners>
        </shape>
    </item>
</selector>