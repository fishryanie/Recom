<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_nendialog">

    <androidx.appcompat.widget.Toolbar
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/header_2"
        app:contentInsetEnd="15dp"
        app:contentInsetStart="15dp"
        android:id="@+id/tb_ThemNguoiDung">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center|left"
                android:id="@+id/txt_TieuDe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Thêm người dùng" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/img_Thoat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_x" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_50"
            android:orientation="vertical"
            android:padding="7dp">

            <EditText
                android:id="@+id/edt_TaiKhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_dn_user"
                android:drawablePadding="15dp"
                android:elevation="3dp"
                android:ems="10"
                android:hint="Tài khoản"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_MatKhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_dn_key"
                android:drawablePadding="15dp"
                android:elevation="3dp"
                android:ems="10"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_HoTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_dn_name"
                android:drawablePadding="15dp"
                android:elevation="3dp"
                android:ems="10"
                android:hint="Họ tên"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:elevation="3dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rdo_Nam"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_left_selector"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:gravity="center"
                    android:text="NAM"
                    android:textColor="@color/bg_50" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rdo_Nu"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_right_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="NỮ"
                    android:textColor="@color/green_blue" />

            </RadioGroup>

            <EditText
                android:id="@+id/edt_ChucVu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_dn_chucvu"
                android:drawablePadding="15dp"
                android:elevation="3dp"
                android:ems="10"
                android:hint="Chức vụ"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/bg_nentext"
                android:drawableLeft="@drawable/ic_dn_email"
                android:drawablePadding="15dp"
                android:elevation="3dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_SoDienThoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/bg_nentext"
                android:drawableLeft="@drawable/ic_dn_phone"
                android:drawablePadding="15dp"
                android:elevation="3dp"
                android:ems="10"
                android:hint="Số điện thoại"
                android:inputType="number"
                android:maxLength="11"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="7dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/button_style6"
        android:id="@+id/btn_ThemMoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm mới" />

    <TextView
        android:layout_marginBottom="14dp"
        android:layout_marginHorizontal="14dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:id="@+id/txt_ThongBao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="(*Cuộn để xem toàn bộ nội dung!)" />


</LinearLayout>