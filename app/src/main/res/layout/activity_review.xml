<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_50"
    tools:context=".Activity.ReviewActivity">

    <androidx.appcompat.widget.Toolbar
        app:navigationIcon="@drawable/load_back"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:gravity="center"
        app:titleTextColor="@color/white"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/header_2"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        android:id="@+id/tb_Review">

        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/txt_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Review công ty"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:background="@color/white"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="left|top"
            android:layout_weight="0"
            android:id="@+id/img_LogoCongTy"
            android:background="@drawable/bg_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="7dp"
            android:src="@drawable/load_logo_unilever"/>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:id="@+id/txt_TenCongTy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="Unilever Việt Nam"
                android:textColor="@color/green_blue"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:id="@+id/img_Sao1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/load_danhgia_1"/>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/img_Sao2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/load_danhgia_1"/>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/img_Sao3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/load_danhgia_1"/>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/img_Sao4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/load_danhgia_2"/>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/img_Sao5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/load_danhgia_3"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txt_SoLuot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="(30)"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:id="@+id/img_Nganh"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_congty_nganh"/>

                <TextView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txt_Nganh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="Hàng tiêu dùng"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:id="@+id/img_NhanVien"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_congty_nhanvien"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txt_NhanVien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="1000+"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:id="@+id/img_DiaChi"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_congty_diachi"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txt_DiaChi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="Quận 7, Tp. Hồ Chí Minh"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:id="@+id/lv_Review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#F8F8F8"
        android:paddingVertical="5dp" />

</LinearLayout>