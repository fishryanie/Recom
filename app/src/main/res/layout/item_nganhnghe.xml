<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bg_item"
        android:elevation="3dp"
        android:paddingHorizontal="4dp"
        android:paddingVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="left|center"
            android:layout_marginLeft="5dp"
            android:layout_weight="0"
            android:id="@+id/img_AnhNganh"
            android:background="#2196F3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:src="@drawable/load_nganh_xe"/>

        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:id="@+id/txt_TenNganh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="Chế tạo xe"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_weight="0"
            android:layout_marginRight="10dp"
            android:background="@color/bg_75"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:id="@+id/txt_Title_SCT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số công ty" />

            <TextView
                android:textStyle="bold"
                android:gravity="center|center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/txt_SoCongTy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="145" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>